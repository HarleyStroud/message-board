<html>

    <head>
        <link rel="stylesheet" href="/styles.css">
        <title>Homepage</title>
    </head>

    <body>

        <a href="/new">Create New Message</a>

        <ul>
            <% for (let i=0; i < messages.length; i++) { %>
                <li>
                        <%= messages[i].text %>
                        <%= messages[i].user %>
                        <%= messages[i].added %>
                
                        <a href="/messages/<%= i %>">Open</a>
                </li>
                <% } %>
        </ul>
    </body>

</html>