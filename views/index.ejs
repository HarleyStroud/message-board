<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <title>Homepage</title>
    </head>

    <body>
        <a href="/new">Create New Message</a>

        <ul>
            <% for (let i=0; i < messages.length; i++) { %>
                <li>
                    <%= messages[i].message_text %>
                    <%= messages[i].username %>
                    <%= messages[i].created_at %>
                    
                    <a href="/messages/<%= i %>">Open</a>
                </li>
            <% } %>
        </ul>

    </body>

</html>
